{
    "branchPrefix": "renovate-humble/",
    "repositories": [
        "locmai/humble"
    ],
    "packageRules": [
        {
            "description": "lockFileMaintenance",
            "matchUpdateTypes": [
                "pin",
                "digest",
                "patch",
                "minor",
                "major",
                "lockFileMaintenance"
            ],
            "dependencyDashboardApproval": false,
            "stabilityDays": 0,
            "automerge": false
        }
    ],
    "argocd": {
        "fileMatch": [
            "^.*\/templates\/.*.yaml$"
        ]
    }
}
